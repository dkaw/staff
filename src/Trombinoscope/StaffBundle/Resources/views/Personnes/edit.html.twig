{% extends '::base.html.twig' %}


{% block body %}
    <div class="row">
    <div class="jumbotron col-md-8 col-md-offset-1">
<form method="POST" action="{% if personne != null %}{{ path('Trombinoscopestaff_personne_edit', { id: personne.id }) }}{% else %}{{ path('Trombinoscopestaff_personne_edit')}}{% endif %}">
    <div class="container">
        <div class="row">
            <div class="control-group span6">
                <b> Nom:</b>    {{ form_widget(form.name) }}
                <div class="controls">
                    {{ form_widget(form.name, {'attr': {'size': '8', 'maxlength' : '30', 'minlength' : '8', 'pattern' : '.{8,8}' }}) }}
                </div></div></div><br>
        <div class="row">
            <div class="control-group span6">
                <b> Prénom:</b>    {{ form_widget(form.prenom) }}
                <div class="controls">
                    {{ form_widget(form.prenom, {'attr': {'size': '8', 'maxlength' : '30', 'minlength' : '8', 'pattern' : '.{8,8}' }}) }}
                </div></div></div><br>
        <div class="row">
            <div class="control-group span6">
                <b> Username:</b>    {{ form_widget(form.username) }}
                <div class="controls">
                    {{ form_widget(form.username, {'attr': {'size': '8', 'maxlength' : '8', 'minlength' : '8', 'pattern' : '.{8,8}' }}) }}
                </div></div></div><br>
        <div class="row">
            <div class="control-group span6">
                <b> Date d'arrivée:</b>    {{ form_widget(form.DateArrivee) }}
                <div class="controls">
                    {{ form_widget(form.DateArrivee, {'attr': {'size': '8', 'maxlength' : '8', 'minlength' : '8', 'pattern' : '.{8,8}' }}) }}
                </div></div></div><br>
        <div class="row">
            <div class="control-group span6">
                <b> Service Principal:</b>    {{ form_widget(form.ServicePrincipal) }}
                <div class="controls">
                    {{ form_widget(form.ServicePrincipal, {'attr': {'size': '8', 'maxlength' : '8', 'minlength' : '8', 'pattern' : '.{8,8}' }}) }}
                </div></div></div><br>
        <div class="row">
            <div class="control-group span6">
                <b> Nom photo:</b>    {{ form_widget(form.nomPhoto) }}
                <div class="controls">
                    {{ form_widget(form.nomPhoto, {'attr': {'size': '8', 'maxlength' : '8', 'minlength' : '8', 'pattern' : '.{8,8}' }}) }}
                </div></div></div><br>
        <b>Photo:</b>    <input type="hidden" name="MAX_FILE_SIZE" value="100000"><br>
        <input type="file" name="image"><br>
        <button class="btn btn-primary" type="submit"> Valider</button>
        <a href="{{ path('Trombinoscopestaff_personne') }}" class="btn btn-default"> Annuler</a><br><br>
        {% if personne.id != null %}<a href="{{ path('Trombinoscopestaff_personne_delete',{'id':personne.id }) }}" class="btn btn-danger"> Supprimer</a>{% endif %}
    </div>
    {{ form_errors(form) }}
    {{ form_widget(form._token) }}
</form>
    </div>
    </div>
{% endblock %}