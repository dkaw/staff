{% extends '::base.html.twig' %}
{% block title %} Liste de staff AQUALEHA {% endblock %}

{% block body %}
    <legend> Liste de Personnes</legend>
    <table>
        <thead>
        <tr>
            <th>Personnes</th>
            </tr></thead>
        <tbody>
        {% for Personnes in ListePersonnes  %}
            <tr>
                <td>
                    {% if Personnes.ServicePrincipal != null %}
                    <a href="{{ path('Staffstaff_personne_service', {id:Personnes.ServicePrincipal.id})}}">{{ Personnes.name }} </a></td>
                    {% endif %}
            </tr>
            <tr>
                <td> {{ Personnes.prenom }}</td>
            </tr>
            <tr>
                <td> {{ Personnes.username }}</td>
            </tr>
            <tr>
                <td>{{ Personnes.DateArrivee |date('d/m/Y') }}</td>
            </tr>
            <tr>
                <td>{{ Personnes.DateFinContrat |date('d/m/Y') }}</td>
            </tr>
            <tr>
                <td><img src="{{ Personnes.photo }}"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
